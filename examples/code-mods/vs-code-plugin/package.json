{
  "name": "vscode-ts-plugin",
  "displayName": "TypeScript Language Features",
  "description": "A simple VS Code extension for TypeScript.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showTypes",
        "title": "Show Types in TypeScript"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -watch",
    "prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "typescript": "^4.0.5",
    "vscode": "^1.49.0"
  }
}
